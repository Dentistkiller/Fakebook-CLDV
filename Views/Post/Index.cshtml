@model IEnumerable<YourProjectName.Models.Post>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Fakebook</h1>

            @foreach (var item in Model)
            {
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center">
                        <strong>@item.User.Id</strong>
                    </div>
                    <div class="card-body p-0"> <!-- Image div -->
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <p>@item.ImageUrl</p> <!-- Debugging: Display the URL -->
                            <img src="@item.ImageUrl" class="img-fluid" alt="Post Image" /> <!-- Display the Image -->
                        }
                    </div>
                    <div class="card-footer">
                        <p><strong>@item.User.Id</strong> @item.Content</p>
                        <div class="mt-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card img {
        width: 100%;
        height: auto;
    }

    .card-header {
        background-color: white;
        border-bottom: none;
    }

    .card-footer {
        background-color: white;
    }
</style>